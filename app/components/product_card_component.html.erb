<div class="relative transition-all duration-300 bg-white cursor-pointer hover:bg-tan-100">
  <div class="relative">
    <% if @payload[:image] %>
      <div class="flex justify-center py-12">
        <img src="<%= @payload[:image] %>" alt="Product" loading="lazy" class="h-60">
      </div>
    <% end %>
  </div>
  <div class="flex items-center justify-between p-8 space-x-2">
    <p class="flex items-center space-x-2 text-lg font-semibold text-tan-800">
      <span><%= @payload[:name] %></span>
      <% if @payload[:chip_text] %>
      <span class="px-1 text-xs font-semibold text-white rounded-full bg-tan-700 h-[1.5em] w-[1.5em] flex items-center justify-center">
        <%= @payload[:chip_text] %>
      </span>
      <% end %>
    </p>
    <% if @payload[:alert] %>
      <p class="font-semibold text-red-500"><%= @payload[:alert] %></p>
    <% end%>
  </div>
  <a href="<%= @payload[:link] %>" class="absolute inset-0 cursor-pointer" aria-label="<%= @payload[:link_label] %>"></a>
</div>
