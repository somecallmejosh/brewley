<div class="relative bg-black md:flex md:items-center md:aspect-w-16 md:aspect-h-9 xl:aspect-w-5 xl:aspect-h-2">
  <img src="https://res.cloudinary.com/dwjulenau/image/upload/v1671731222/Brewery%20Mock%20Site/pour.jpg" class="md:object-cover">
  <div class="absolute inset-0 hidden md:block bg-tan-800 mix-blend-multiply"></div>
  <div class="absolute inset-0 hidden md:block bg-tan-600 mix-blend-multiply"></div>
  <div class="w-full text-white md:flex md:items-center md:h-full">
    <div class="w-full px-4 mx-auto max-w-[1440px]">
      <div class="grid items-center gap-12 p-4 font-bold md:grid-cols-5">
        <div class="flex flex-col py-12 space-y-4 font-bold text-center md:justify-center md:col-span-3 md:text-left lg:space-y-0 lg:py-0">
          <div class="text-3xl font-black lg:text-7xl">
            Get <span class="text-amber-600">hopped-up</span> at
            <%= render(LogoComponent.new(payload: {
              logo_styles: 'h-[3em] fill-white',
              tagline_present: false,
              wrapper_styles: 'flex transform translate-y-3 md:block justify-center'
            })) %>
          </div>
          <span class="block transform lg:-translate-y-5 lg:text-3xl opacity-70 text-amber-50">where every sip is a crafty adventure!</span>
          <div class="pt-6">
            <a href="/categories" class="<%= button_class(theme: 'primary', variant: 'small') %>">Checkout Our Beers!</a>
          </div>
        </div>
        <div class="relative flex justify-center pb-12 md:col-span-2 md:pb-0">
          <div class="z-10 transform translate-x-8 opacity-70">
            <img
              class="h-[20em] xl:h-[550px]"
              src="https://res.cloudinary.com/dwjulenau/image/upload/c_fit,dpr_auto,f_auto,h_550,q_auto/v1671741476/Brewery%20Mock%20Site/parsber-pils-bottle-transparent.png" alt="Parsber Pils Bottled Beer">
          </div>
          <div class="z-20 ">
            <img
              class="h-[22em] xl:h-[600px]"
              src="https://res.cloudinary.com/dwjulenau/image/upload/c_fit,dpr_auto,f_auto,h_600,q_auto/v1671741476/Brewery%20Mock%20Site/double-dog-bottle-transparent.png" alt="Double Dob IPA Bottled Beer">
          </div>
          <div class="z-10 transform -translate-x-8 opacity-80">
            <img
              class="h-[20em] xl:h-[550px]"
              src="https://res.cloudinary.com/dwjulenau/image/upload/c_fit,dpr_auto,f_auto,h_550,q_auto/v1671741476/Brewery%20Mock%20Site/nutmeg-porter-stout-bottle-transparent.png" alt="Nutmeg Porter Stout Bottle Beer">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
