<div class="<%= page_container %>">
  <h1 class="text-4xl font-bold">New <%= @product.name %> variant</h1>

  <%= render "form", product_variant: @product_variant %>
  <div>
    <%= link_to "Back to #{@product.name}", category_product_path(@category, @product), class: button_class(theme: 'back', variant: 'small') %>
    <%= link_to "Back to #{@product.name} Variants", category_product_product_variants_path(@category, @product), class: button_class(theme: 'back', variant: 'small') %>
  </div>
</div>
