<div class="<%= page_container %>">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">Containers</h1>
    <%= link_to 'New container', new_container_path, class: button_class(theme: 'create', variant: 'small') %>
  </div>

  <div id="containers" class="space-y-2">
    <%= render @containers %>
  </div>
</div>
