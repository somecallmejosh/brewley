<%= form_with(model: [@category, product], class: form_wrapper) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation" class="px-3 py-2 mt-3 font-medium text-red-500 bg-red-50">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :category_id, value: @category.id %>

  <div class="p-6 space-y-6 shadow-lg">
    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :description %>
      <%= form.rich_text_area :description, rows: 4 %>
    </div>
  </div>
  <div class="p-6 space-y-6 shadow-lg">
    <h2 class="font-semibold tracking-wide text-gray-500 uppercase">Branding Details</h2>
    <div class="grid grid-cols-2 gap-6">

      <div>
        <%= form.label :etoh %>
        <%= form.number_field :etoh, step: :any %>
      </div>
      <div>
        <%= form.label :product_image %>
        <%= form.text_field :product_image %>
      </div>

      <div>
        <%= form.label :brand_image %>
        <%= form.text_field :brand_image %>
      </div>
    </div>
  </div>


  <div class="p-6 space-y-6 shadow-lg">
    <h2 class="font-semibold tracking-wide text-gray-500 uppercase">Product Availability</h2>
    <div class="grid grid-cols-2 gap-6">
      <div>
        <%= form.label :available_on %>
        <%= form.date_field :available_on %>
      </div>
      <div>
        <%= form.label :discontinued_on %>
        <%= form.date_field :discontinued_on %>
      </div>
    </div>
  </div>
  <div class="p-6 space-y-6 shadow-lg">
    <h2 class="font-semibold tracking-wide text-gray-500 uppercase">SEO Details</h2>
    <div class="grid grid-cols-2 gap-6">
      <div>
        <%= form.label :meta_title %>
        <%= form.text_field :meta_title %>
      </div>
      <div>
        <%= form.label :meta_description %>
        <%= form.text_field :meta_description %>
      </div>
    </div>
  </div>

  <div>
    <%= form.label :price %>
    <%= form.number_field :price, step: :any %>
  </div>

  <div>
    <%= form.submit class: button_class(theme: 'update', variant: 'small') %>
  </div>
<% end %>
