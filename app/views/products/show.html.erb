<% if @product.available_on.present? && @product.discontinued_on.present? %>
  <% if (@product.discontinued_on.to_date - Date.today.to_date).to_i < 10 %>
    <div role="alert" class="p-6 font-semibold text-center text-red-800 rounded bg-gray-50">
      <p>**<%= @product.name %> will be discontinued in <%= (@product.discontinued_on.to_date - Date.today.to_date).to_i %> days!**</p>
    </div>
  <% end %>
<% end %>
<div class="pb-12 text-white shadow-lg bg-zinc-900">
  <div class="<%= page_container_wide %>">
    <div>
      <%= render 'breadcrumbs', product: @product %>
    </div>
    <div class="flex flex-col gap-10 mb-8 lg:flex-row lg:justify-between lg:items-center lg:min-h-[500px]">
      <div class="space-y-4">
        <%= link_to @product.category.name, category_products_path(@category, @product), class: "bg-zinc-200 py-0.5 px-1.5 rounded text-xs tracking-widest font-semibold text-black" %>
        <h1 class="text-4xl font-black lg:text-7xl">
          <%= @product.name %>
        </h1>
        <div class="prose prose-invert">
          <%= @product.description %>
          <% if @product.available_on.present? && @product.discontinued_on.present? %>
            <p class="px-4 py-2 bg-white rounded bg-opacity-10"><%= @product.name %> is only available from <strong><%= @product.available_on.strftime("%b %d, %Y") %></strong> to <strong><%= @product.discontinued_on.strftime("%b %d, %Y") %></strong>.</p>
          <% end %>
        </div>
      </div>
      <div class="relative flex justify-center mb-6 space-y-6 lg:basis-96 lg:mb-0 lg:flex-shrink-0 lg:block">
        <img src="<%= @product.product_image %>" alt="Product in bottle" loading="lazy" class="lg:absolute lg:transform lg:-translate-y-1/2 h-[600px]">
      </div>
    </div>
  </div>
</div>
<div class="<%= page_container %>">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>
  <div>
    <%= render @product %>
  </div>
  <div>
    <%= link_to 'Edit this product', edit_category_product_path(@category, @product), class: button_class(theme: 'update', variant: 'small') %>
    <%= link_to 'Back to products', category_products_path(@category, @product), class: button_class(theme: 'back', variant: 'small') %>
    <div class="inline-block">
      <%= button_to 'Destroy this product', category_product_path(@category, @product), method: :delete, class: button_class(theme: 'destroy', variant: 'small') %>
    </div>
  </div>
</div>
