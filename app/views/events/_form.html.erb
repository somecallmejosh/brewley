<%= form_with(model: event, class: form_wrapper) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation" class="px-3 py-2 mt-3 font-medium text-red-500 rounded-lg bg-red-50">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :start_date %>
    <%= form.datetime_field :start_date %>
  </div>


  <div>
    <%= form.label :end_date %>
    <%= form.datetime_field :end_date %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description, rows: 4 %>
  </div>

  <div>
    <%= form.label :price %>
    <%= form.text_field :price, step: :any %>
  </div>

  <div>
    <%= form.submit class: button_class(theme: 'update', variant: 'small') %>
  </div>
<% end %>
