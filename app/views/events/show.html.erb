<div class="<%= page_container %>">
  <div>
    <%= render 'breadcrumbs', event: @event %>
  </div>

  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 bg-green-50" id="notice"><%= notice %></p>
  <% end %>

  <%= render @event %>

  <div>
    <%= link_to 'Edit this event', edit_event_path(@event), class: button_class(theme: 'update', variant: 'small') %>
    <%= link_to 'Back to events', events_path, class: button_class(theme: 'back', variant: 'small') %>
    <div class="inline-block">
      <%= button_to 'Destroy this event', event_path(@event), method: :delete, class: button_class(theme: 'destroy', variant: 'small') %>
    </div>
  </div>
</div>
