<% name_attribute = attributes.find{ |a| a.name == "name" } %>
<% has_name = !!name_attribute %>
<div class="<%%= page_wrapper_class() %>">
  <div class="<%%= header_wrapper_class() %>">
    <h1 class="flex-1 text-3xl font-semibold">
      <%%= @<%= singular_table_name %>.name %>
    </h1>
    <div class="flex justify-end">
      <%%= link_to <%= index_helper %>_path, class: button_class(variant: "icon"), title: 'Back' do %>
      <%%= inline_svg 'solid/arrow-left', class: 'h-4 w-4' %>
      <%% end %>
      <%%= link_to edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: button_class(variant: "icon"), title: 'Edit record' do %>
      <%%= inline_svg 'solid/pencil', class: 'h-4 w-4' %>
      <%% end %>
    </div>
  </div>
  <ul class="p-4 space-y-6 bg-white shadow-lg lg:divide-y lg:divide-gray-200 lg:space-y-0 lg:p-12">
    <%- attributes.each do |attribute| -%>
      <li class="space-y-1 lg:py-3 lg:flex lg:space-y-0 lg:space-x-2">
        <p class="font-medium lg:basis-1/3"><%= attribute.human_name %>:</p>
        <p class="lg:basis-2/3"><%%= @<%= singular_table_name %>.<%= attribute.name %> %></p>
      </li>
    <%- end -%>
  </ul>
</div>
